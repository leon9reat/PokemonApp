<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ability_name"
        tools:text="ability_name"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ability_hidden_label"
        app:layout_constraintTop_toBottomOf="@id/tv_ability_name"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/hidden" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ability_hidden"
        tools:text="tv_ability_hidden"
        app:layout_constraintTop_toTopOf="@id/tv_ability_hidden_label"
        app:layout_constraintStart_toEndOf="@id/tv_ability_hidden_label"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_slot_label"
        app:layout_constraintTop_toBottomOf="@id/tv_ability_hidden_label"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/slot" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ability_slot"
        tools:text="tv_ability_slot"
        app:layout_constraintTop_toTopOf="@id/tv_slot_label"
        app:layout_constraintStart_toEndOf="@id/tv_slot_label"
        app:layout_constraintEnd_toEndOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>